    "@nestjs/serve-static": "^4.0.1",
    "@nestjs/websockets": "^10.3.3",
    "@types/nodemailer": "^6.4.14",
    "@types/sequelize": "^4.28.20",
    "bcryptjs": "^2.4.3",
